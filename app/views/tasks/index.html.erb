<h2> This is the index of all tasks</h2>

<div  class="container">
<%@tasks.each do |task| %>
<ul>
  <li><%=task.completed ? "✅" : "❌"%><%= link_to task.title, task_path(task)%>
    <%= link_to "Delete", task_path(task.id), method: :delete%>  </li>
<% end %>

</ul>
<% end %>
</div>

<div><%= link_to "Add a new task", new_task_url%></div>

